<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.clarisselawson.tripbudget.EditSpentActivity"
    android:background="#f0f1f7">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/fillinPart"
        android:backgroundTint="#d66616"
        android:background="#e7882f"
        android:layout_above="@+id/validateAddPart"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/spent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enregistrement de dépense"
            android:layout_above="@+id/fillinPart"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/libelle"
            android:text="Libelle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_below="@+id/fillinPart"
            android:layout_alignEnd="@+id/fillinPart"
            android:layout_marginEnd="224dp" />

        <EditText
            android:id="@+id/spent_libelle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fillinPart"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/category"
            android:text="Catégorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fillinPart"
            android:layout_alignParentStart="true" />

        <Spinner
            android:id="@+id/spent_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Catégorie"
            android:layout_below="@+id/fillinPart"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/montant"
            android:text="Montant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fillinPart"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/spent_amount"
            android:inputType="number"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fillinPart"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/date"
            android:text="Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fillinPart"
            android:layout_alignParentStart="true" />

        <Button android:id="@+id/spent_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_below="@id/spent_amount"/>
        />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/fillinPart"
        android:id="@+id/validateAddPart"
        android:background="#ffbb34">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enregistrer"
            android:id="@+id/save_spent"
            android:layout_above="@+id/validateAddPart"
            android:layout_alignEnd="@+id/button"
            android:layout_gravity="center_horizontal"
            android:onClick="saveSpent"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Annuler"
            android:id="@+id/cancel_spent"
            android:layout_above="@+id/validateAddPart"
            android:layout_alignEnd="@+id/button"
            android:layout_gravity="center_horizontal"
            android:onClick="cancelSpentEdition"/>

    </LinearLayout>

</RelativeLayout>
