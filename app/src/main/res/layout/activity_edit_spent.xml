<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.clarisselawson.tripbudget.EditSpentActivity"
    android:background="@drawable/colored_background">

    <TextView
        android:id="@+id/editSpentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:textColor="@color/textColorPrimary"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/fillinPart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/libelle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif"
            android:text="Libelle"
            android:textColor="@color/textColorPrimary"
            android:layout_marginLeft="4dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/spent_libelle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rectangle_textedit"
            android:textColor="@android:color/white"
            android:textCursorDrawable="@drawable/cursor_color"/>

        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif"
            android:text="Catégorie"
            android:textColor="@color/textColorPrimary"
            android:layout_marginLeft="4dp"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spent_category"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rectangle_textedit"
            android:text="Catégorie" />

        <TextView
            android:id="@+id/montant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif"
            android:text="Montant"
            android:textColor="@color/textColorPrimary"
            android:layout_marginLeft="4dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/spent_amount"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rectangle_textedit"
            android:inputType="number"
            android:textColor="@android:color/white"
            android:textCursorDrawable="@drawable/cursor_color"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif"
            android:text="Date"
            android:textColor="@color/textColorPrimary"
            android:textSize="18sp" />

        <Button
            android:id="@+id/spent_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rectangle_textedit"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/save_spent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@color/savebutton"
            android:onClick="saveSpent"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="Terminer"
            android:textColor="@color/textColorPrimary" />

    </LinearLayout>

</LinearLayout>

